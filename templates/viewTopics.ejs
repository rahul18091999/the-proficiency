<!DOCTYPE html>
<html>

<head>
    <title>View Topic</title>
    
      
    
    <%- include('../../../components/partials/header.ejs') %>

    <div class="text-center mb-6">
        <a href='/addTopic/<%= sub%>'>
            <button type="button" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span> Add New Topic in <%= name%></button>
        </a>
    </div>
    <br>
    <div class="panel panel-success">
        <div class="panel-heading">All Topic</div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Discription</th>
                        <th>View Questions</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data){
    for(var i=0;i<data.length;i++){
        %>
                    <tr>
                        <td><%= data[i].id%></td>
                        <td><%= data[i].name%></td>
                        <td><%= data[i].dis%></td>
                        <td>
                            <a href='/viewQues/<%= sub%>-<%= data[i].id%>'> <button type="button"
                                    class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-edit"></span> View Questions
                                </button>
                            </a>
                        </td>
                        <td>
                            <a href='/editTopic/<%= sub%>-<%= data[i].id%>'> <button type="button"
                                    class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-edit"></span> Edit
                                </button>
                            </a>
                        </td>
                    </tr>
                    <%
    }
}
%>
                </tbody>
            </table>
        </div>
    </div>


</body>

</html>